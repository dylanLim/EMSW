<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="1"
        android:id="@+id/button"
        android:layout_below="@+id/button2"
        android:layout_toLeftOf="@+id/button2"
        android:layout_toStartOf="@+id/button2" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="2"
        android:id="@+id/button2"
        android:layout_above="@+id/button3"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="3"
        android:id="@+id/button3"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/button4"
        android:layout_toStartOf="@+id/button4"
        android:layout_marginBottom="49dp" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="4"
        android:id="@+id/button4"
        android:layout_alignTop="@+id/button3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="A"
        android:id="@+id/buttonA"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp"
        android:layout_alignTop="@+id/buttonS"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="S"
        android:id="@+id/buttonS"
        android:layout_above="@+id/button"
        android:layout_toRightOf="@+id/buttonA"
        android:layout_toEndOf="@+id/buttonA"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="Z"
        android:id="@+id/buttonZ"
        android:layout_alignBottom="@+id/button"
        android:layout_alignLeft="@+id/buttonA"
        android:layout_alignStart="@+id/buttonA" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="X"
        android:id="@+id/buttonX"
        android:layout_alignBottom="@+id/button"
        android:layout_alignLeft="@+id/buttonS"
        android:layout_alignStart="@+id/buttonS" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="coin"
        android:id="@+id/buttonCoin"
        android:layout_alignTop="@+id/button1P"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="1P"
        android:id="@+id/button1P"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="CONNECT"
        android:id="@+id/connButton"
        android:layout_alignTop="@+id/button1P"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
